<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XpressReceipt.SettingsPage">

  <StackLayout>
    <Label Text="Settings Page" 
             VerticalOptions="Center" 
             HorizontalOptions="Center" 
             Font="Bold, 30"/>

    <StackLayout
      Orientation="Vertical"
      HorizontalOptions="FillAndExpand"
      VerticalOptions="FillAndExpand"
      Margin="10">

      <Label Text="My Email:"  />    
      <Entry x:Name="MyEmail" Text="" />

      <Label Text="Receiver's Email:"  /> 
      <Entry x:Name="OtherEmail" Text="" />


      <Entry x:Name="ContactList" Text="Contacts:"/>      

            
      <Button x:Name="UpdateSettingsBtn" Text="Update Settings"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>

      <Button x:Name="CancelSettingsBtn" Text="Cancel"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>


    </StackLayout>
    <Image x:Name="ImageTaken" 
           VerticalOptions="FillAndExpand"
           HorizontalOptions="FillAndExpand"/>

  </StackLayout>
</ContentPage>